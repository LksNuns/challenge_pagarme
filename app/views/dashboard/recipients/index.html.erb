<p id="notice"><%= notice %></p>

<h2>Produtos</h2>
<%= link_to "Adicionar Recebedor", new_dashboard_recipient_path %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipients.each do |r| %>
      <tr>
        <td><%= r.id_recipient %></td>
        <td><%= link_to 'Visualizar', dashboard_recipient_path(r) %></td>
        <td><%= link_to 'Editar', edit_dashboard_recipient_path(r) %></td>
        <td><%= link_to 'Remover', dashboard_recipient_path(r), method: :delete, data: { confirm: 'Deseja remover?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
