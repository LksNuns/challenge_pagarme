.alert.alert-sucess{role:'alert'}
  = notice

%h2 Produtos
= link_to "Adicionar Produto", new_dashboard_product_path, class: "btn btn-success" 
%table.table.table-striped
  %thead
    %tr
      %th Nome
      %th Descrição
      %th Valor Minimo
      %th{:colspan => "3"}
  %tbody
    - @products.each do |p|
      %tr
        %td= p.name
        %td= p.desc
        %td= p.min_donation
        %td= link_to 'Visualizar', dashboard_product_path(p)
        %td= link_to 'Editar', edit_dashboard_product_path(p)
        %td= link_to 'Remover', dashboard_product_path(p), method: :delete, data: { confirm: 'Deseja remover?' }
%br
